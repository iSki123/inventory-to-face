{
  "manifest_version": 3,
  "name": "Salesonator Mega Extension",
  "version": "1.0.0",
  "description": "Unified Salesonator extension to scrape vehicles and post to Facebook Marketplace (merges legacy + current + reverseeng helpers behind toggles).",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://facebook.com/*",
    "https://web.facebook.com/*",
    "https://*.carsforsale.com/*",
    "https://*.autotrader.com/*",
    "https://urdkaedsfnscgtyvcwlf.supabase.co/*",
    "https://*.lovable.app/*",
    "https://*.lovableproject.com/*",
    "http://localhost:8080/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Salesonator Mega Extension"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/marketplace/create/*",
        "https://web.facebook.com/marketplace/create/*"
      ],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://*.carsforsale.com/*"
      ],
      "js": ["scrapers/carsforsale-scraper.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://*.autotrader.com/*"
      ],
      "js": ["scrapers/autotrader-scraper.js"],
      "run_at": "document_idle"
    }
  ]
}
