{
  "manifest_version": 3,
  "name": "Salesonator - Facebook Marketplace Automation",
  "version": "1.0.0",
  "description": "Automate Facebook Marketplace vehicle listings from Salesonator",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://facebook.com/*",
    "https://urdkaedsfnscgtyvcwlf.supabase.co/*",
    "https://*.lovableproject.com/*",
    "https://salesonator.com/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://facebook.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://*.carsforsale.com/*"
      ],
      "js": ["scrapers/carsforsale-scraper.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://*.autotrader.com/*"
      ],
      "js": ["scrapers/autotrader-scraper.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Salesonator Extension"
  }
}